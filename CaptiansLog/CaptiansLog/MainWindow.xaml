<Window x:Class="CaptiansLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Captian's Log" Height="442.537" Width="804.104" ResizeMode="NoResize" ContentStringFormat="">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF4F4F4F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <DataGrid x:Name="dataGrid" Margin="10,135,10,10" FrozenColumnCount="1" IsReadOnly="True" />           
        <TextBox x:Name="logText" Height="41" Margin="10,89,10,0" TextWrapping="Wrap" VerticalAlignment="Top" SpellCheck.IsEnabled="True" MaxLength="100"
      MaxLines="1" />
        <Button x:Name="enterButton" Content="Enter Log" Margin="10,0,0,352" Height="43" VerticalAlignment="Bottom" Click="enterButton_Click" HorizontalAlignment="Left" Width="193"/>
        <Button x:Name="deleteButton" Content="Delete Log" VerticalAlignment="Bottom" Margin="0,0,10,352" Height="43" HorizontalAlignment="Right" Width="193" Click="deleteButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,68,0,0" TextWrapping="Wrap" Text="Enter Text   100 character max" VerticalAlignment="Top" RenderTransformOrigin="-3.592,0.344" Height="16" Width="167" Background="#FFB2B2B2"/>
    </Grid>
</Window>
